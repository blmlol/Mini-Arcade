                <a class="btn btn-lg" href="/hangman" id="play-now-btn">Play Now!</a>
              </div>
            </div>
            <div class="carousel-item">
              <img src="/images/simon-says.jpg" id="img-carousel" class="d-block w-100" alt="samplePic">
              <div class="carousel-caption d-none d-md-block">
                <h3 id="game-name">Simon Sayzzz</h3>
                <a class="btn btn-lg" href="/simonSays" id="play-now-btn">Play Now!</a>
              </div>
            </div>
            <div class="carousel-item">
              <img src="/images/roygbiv.png" id="img-carousel" class="d-block w-100" alt="...">
              <div class="carousel-caption d-none d-md-block">
                <h3 id="game-name">The Color Game</h3>
                <a class="btn btn-lg" href="/colorGame" id="play-now-btn">Play Now!</a>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="col-md-3"></div>

    </div>

    <div class="row">
      <div class="col-md-3"></div>
