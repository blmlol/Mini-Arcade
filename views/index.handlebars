<div class="container" id="index-body">

  <div class="row mb-5">
    <div class="col-md-2">
      <a class="btn btn-danger btn-lg" href="/signin" id="loginBtn">Login</a>
    </div>
    <div class="col-md-2">
      <a class="btn btn-danger btn-lg" href="/signup" id="signUp">Sign-Up</a>
    </div>
    <div class="col-md-2">
      <a class="btn btn-danger btn-lg" href="/signup" id="signUp">User High-Scores</a>
    </div>
  </div>


<div class='row'>
    <div class='col-md-3'>

    </div>
    <div class='col-md-6 text-center'>

      {{msg}}
    </div>
    <div class='col-md-3'>

    </div>
  <div class="row mt-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div id="carouselExampleCaptions" class="shake-slow shake-constant shake-constant--hover" class="carousel slide mt-5" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/Hangman.jpg" class="d-block w-100" id="img-carousel" alt="samplePic">
            <div class="carousel-caption d-none d-md-block">
              <h3 id="game-name">Hanging With The Boyzzz</h3>
              <a class="btn btn-lg" href="/hangman" id="play-now-btn">Play Now!</a>

  
    
            </div>
            <div class="carousel-item">
              <img src="/images/simon-says.jpg" id="img-carousel" class="d-block w-100" alt="samplePic">
              <div class="carousel-caption d-none d-md-block">
                <h3 id="game-name">Simon Sayzzz</h3>
                <a class="btn btn-lg" href="/simonSays" id="play-now-btn">Play Now!</a>
              </div>
            </div>
            <div class="carousel-item">
              <img src="/images/roygbiv.png" id="img-carousel" class="d-block w-100" alt="...">
              <div class="carousel-caption d-none d-md-block">
                <h3 id="game-name">The Color Game</h3>
                <a class="btn btn-lg" href="/colorGame" id="play-now-btn">Play Now!</a>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="col-md-3"></div>

    </div>


  <div class="row">
    <div class="col-md-3" class="shake-slow shake-constant shake-constant--hover" style="font-size: 28px;"></div>
    <i class="fas fa-gamepad fa-10x" class="shake-slow shake-constant shake-constant--hover" id="gamepad">-</i>
    <i class="fas fa-gamepad fa-10x" id="gamepad"></i>
    <div class="col-md-3"></div>
  </div>

</div>

